<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testapp.mytestapplication">

    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序设置内置sd卡的写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序读写手机状态和身份 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 允许程序访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.example.testapp.app.HomeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HomeTheme">


        <activity android:name="com.example.testapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.testapp.lesson_ui.RoundImageActivity" />
        <activity android:name="com.example.testapp.lesson_android.ThreadHandler" />
        <activity
            android:name="com.example.testapp.lesson_android.ServiceActivity"
            android:label="@string/title_activity_service" />

        <service
            android:name="com.example.testapp.lesson_android.MyApplicationService"
            android:enabled="true"
            android:exported="true"
            android:process=":remote" />
        <service
            android:name="com.example.testapp.lesson_android.MyBindService"
            android:exported="false" />

        <activity
            android:name="com.example.testapp.lesson_android.ScrollFlagActivity"
            android:label="@string/title_activity_scoll_flag" />
        <activity
            android:name="com.example.testapp.lesson_android.RoomStatusActivity"
            android:label="@string/title_activity_room_status"
            android:theme="@style/HomeTheme" />
        <activity
            android:name="com.example.testapp.lesson_android.realm_test.RealmTestActivity"
            android:label="@string/title_activity_realm_test"
            android:theme="@style/HomeTheme" />
        <activity
            android:name="com.example.testapp.lesson_android.ExecutorTest"
            android:theme="@style/HomeTheme" />

        <service
            android:name="com.example.testapp.lesson_android_aidl.MyIntentService"
            android:exported="true"
            android:process=":remote">
            <intent-filter>
                <action android:name="com.anmnight.aidl.service" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.example.testapp.lesson_android_aidl.TestAIDLActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/HomeTheme" />
        <activity android:name="com.example.testapp.lesson_ui.MomentRefreshLayout"></activity>
    </application>

</manifest>