<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.testapp.activities.CustomerImageActivity"
    tools:ignore="MissingConstraints">

    <com.anmnight.commlibrary.widget.BitmapShaderRoundImageView
        android:id="@+id/bitmapShaderRoundImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/gal" />

    <com.anmnight.commlibrary.widget.XfermodeRoundImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/gal"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.anmnight.imageloader.AutoLoadImage
        android:id="@+id/auto_load_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bitmapShaderRoundImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>




